root = true

[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
indent_size = 4
indent_style = tab

[*.{html,astro,css,js,jsx,ts,tsx,config,json,md,lua,yaml}]
indent_style = space
indent_size = 2

[*.py]
indent_style = space
indent_size = 4
max_line_length = 79

[*.java]
indent_style = space
indent_size = 2
max_line_length = 100
insert_final_newline = false

